{
    "env": {
		"node": true,
		"es6": true,
        "commonjs": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
		"ecmaVersion": 2017
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
		],
		"no-console": [
			"off"
		],
		"no-unused-vars": [
			"warn"
		]
    }
}
